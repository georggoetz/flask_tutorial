{
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "autopep8.args": [
    "--max-line-length=120",
    "--indent-size=2",
    "--ignore=E121"
  ],
  "flake8.args": [
    "--indent-size=2",
    "--max-line-length=120",
    "--ignore=E121",
    "--exclude=__pycache__,.git,migrations,build,dist,.venv"
  ],
  "eslint.options": {
    "configFile": "eslint.config.mjs",
    "eslint.experimental.useFlatConfig": true
  },
  "eslint.validate": [
    "javascript",
  ],
}