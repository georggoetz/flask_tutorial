{% extends 'base.jinja2' %}

{% block header %}
{% endblock %}

{% block content %}
<div class="card card--narrow">
  <h1 class="card__heading">{% block title %}Register{% endblock %}</h1>
  <form method="post" class="login-form">
    <div class="login-form__field">
      <label for="username" class="login-form__label">Username</label>
      <div class="login-form__input-group">
        <span class="login-form__icon">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="10" cy="7" r="4" stroke="currentColor" stroke-width="1.5"/><path d="M3.5 17c0-2.485 2.91-4.5 6.5-4.5s6.5 2.015 6.5 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
        </span>
        <input class="input login-form__input" name="username" id="username" required >
      </div>
    </div>
    <div class="login-form__field">
      <label for="password" class="login-form__label">Password</label>
      <div class="login-form__input-group">
        <span class="login-form__icon">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="4" y="9" width="12" height="7" rx="2" stroke="currentColor" stroke-width="1.5"/><path d="M10 13v1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/><path d="M7 9V7a3 3 0 1 1 6 0v2" stroke="currentColor" stroke-width="1.5"/></svg>
        </span>
        <input class="input login-form__input" type="password" name="password" id="password" required >
      </div>
    </div>
    <div class="login-form__actions">
      <input class="button login-form__submit" type="submit" value="Register">
    </div>
  </form>
</div>
{% endblock %}