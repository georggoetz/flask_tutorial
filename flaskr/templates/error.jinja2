<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Error</title>
    <script src="{{ url_for('static', filename='dist/bundle.js') }}"></script>
  </head>

  <body>
    <main role="main">
      <div class="container">
        <div class="card error-card"
             role="alert"
             aria-live="assertive">
          <h1 tabindex="0">{{ error_code }}: {{ error_name }}</h1>
          <p>{{ error_message }}</p>
          <a href="{{ url_for('blog.index') }}"
             class="button error-card__button">Back to Home</a>
        </div>
      </div>
    </main>
  </body>

</html>